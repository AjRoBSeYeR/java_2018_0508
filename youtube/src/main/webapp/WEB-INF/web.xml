<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
       
       <!-- pagina inicial de la App 
       
      		*conseguimos que la pagina principal no sea la index.jsp 	      
        
	       <welcome-file-list>
	       		<welcome-file>/inicio</welcome-file>
	       </welcome-file-list>
        -->
       
       
       <!-- 
             versiones < 3.0 los Servlets de declaran aqui
       		 Versiones > 3.0 se usan anotaciones en el propio servlet @WebServlet("/mapping")
       		 
       		 
       		 Ejemplo: HomeController en version 2.5
       		 
		       	<servlet>
		         	<servlet-name>home</servlet-name>
		         	<servlet-class>com.ipartek.formacion.youtube.controller.HomeController</servlet-class>
		         </servlet>
		         <servlet-mapping>
		         	<servlet-name>home</servlet-name>
		         	<url-pattern>/inicio</url-pattern>
		         </servlet-mapping>	 
       		  	
        -->  
         
         
       <!-- caducidad session usuario 5 min, valor 0 o negativo no expira nunca -->  
       <session-config>
       		<session-timeout>5</session-timeout>
       </session-config>  
         
         
       <!-- Tambien se puden espeficiar LISTENNERs y FILTERs -->  
         
         
       <!-- Gestionar Paginas de Error HTTP CODEs -->  
       <error-page>
       		<error-code>404</error-code>
       		<location>/404.jsp</location>
       </error-page>
       
       <error-page>
       		<error-code>500</error-code>
       		<location>/500.jsp</location>
       </error-page>
       
       <!-- Tambien se pueden especificar Excepciones 
       <error-page>
       		<exception-type>java.lang.NullPointerException</exception-type>
       		<location>/exception.jsp</location>
       </error-page>
        -->
         
         
</web-app>