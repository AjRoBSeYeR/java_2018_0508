/* Estilos generales para el backoffice */

body, nav, .sidebar{
	background-color:#fff !important;
}

img{
	max-width:100%;
}

/* Estilos para el menú del backoffice */

nav{
	min-height:12vh !important;
	border-color:#0C2661 !important;
}

.logo{
	width:55% !important;
}

.cerrarSesion{
	position:absolute;
	right:15px;
	top:10px;
}

.sidebar{
	margin-top:6em;
}

.sidebar ul li {
	border-color:#72C7DC;
}

.sidebar ul li a{
	color:#0C2661;
}

/* Estilos contenido principal del backoffice */

#page-wrapper{
	padding:2em 3em;
	min-height:75vh;
	border-color:#0C2661;
}

.divTitulo{
	margin-bottom:2em;
	border-bottom:1px solid #868686;
	padding-bottom:1em;
}

.titulo{
	display:inline;
	border:none;
}

.titulo .badge{
	background-color:#72C7DC;
}

.btn-crear{
	text-align:right;
}

.btn-crear a{
	background-color:#fff;
	color:#0C2661;
	border-color:#0C2661;
}

.btn-crear a:hover{
	color:#fff;
	background-color:#0C2661;
}


/* Estilos para el footer del backoffice */

.footer{
	border-top:1px solid #0C2661;
	color:#868686;
	padding-top:2em;
	padding-bottom:1em;
	text-align:center;
}