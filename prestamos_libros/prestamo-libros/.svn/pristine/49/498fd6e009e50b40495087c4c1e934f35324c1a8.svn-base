/* Estilos generales para el backoffice */

body, nav, .sidebar{
	background-color:#fff !important;
}

img{
	max-width:100%;
}

/* Estilos para el menú del backoffice */

nav{
	min-height:12vh !important;
	position:relative;
}

.logo{
	width:55% !important;
}

.cerrarSesion{
	position:absolute;
	right:15px;
}

.sidebar{
	margin-top:6em;
}

/* Estilos contenido principal del backoffice */

#page-wrapper{
	padding:2em 3em;
}

.titulo{
	display:inline;
}

.titulo .badge{
	background-color:#72C7DC;
}

.btn-crear{
	text-align:right;
}

.btn-crear a{
	background-color:#fff;
	color:#0C2661;
	border-color:#0C2661;
}

.btn-crear a:hover{
	color:#fff;
	background-color:#0C2661;
}